<Window x:Class="School.Views.AddNota"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:School.Views"
        mc:Ignorable="d"
        Title="Adaugare Nota" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="nota" HorizontalAlignment="Left" Height="25" Margin="45,65,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="78"/>
        <Label Content="Nota" HorizontalAlignment="Left" Margin="45,39,0,0" VerticalAlignment="Top"/>
        
        <CheckBox x:Name="checkTeza" Content="Este teza" HorizontalAlignment="Left" Margin="181,70,0,0" VerticalAlignment="Top" Width="88"/>
                
        <DatePicker x:Name="dataNota" HorizontalAlignment="Left" Margin="94,132,0,0" VerticalAlignment="Top" />
        <Label Content="Data" HorizontalAlignment="Left" Margin="94,101,0,0" VerticalAlignment="Top"/>

        <Button x:Name="SubmitNota" Content="Adauga" HorizontalAlignment="Left" Margin="110,195,0,0" VerticalAlignment="Top" Width="75" Click="SubmitNota_Click" Height="33" />
    </Grid>
</Window>
